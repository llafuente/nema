{
  "name": "nema",
  "version": "1.0.0",
  "description": "`nema` is an api server/client from a swagger definition (raml is planned).",
  "main": "index.js",
  "bin": {
    "nema": "nema.js"
  },
  "scripts": {
    "test": "npm run build && ava --verbose ./dist/test/*.js",
    "clean:test": "rm -rf test/api-test-001 test/angular5client-resolve test/angular5client-parameters test/pet-store-client test/pet-store-server/src",
    "pretty": "prettier --write --parser typescript --print-width 120 \"src/**/*.ts\"",
    "doc": "typedoc --out ./docs/ ./src/",
    "lint": "npm run pretty && tslint --force --fix -c ./tslint.json --type-check -p ./tsconfig.json",
    "build": "tsc -p ./tsconfig.json"
  },
  "author": "Luis Lafuente Morales",
  "license": "MIT",
  "dependencies": {
    "commander": "2.13.0",
    "ejs": "2.5.7",
    "lodash": "4.17.4",
    "pluralize": "7.0.0",
    "yamljs": "0.3.0"
  },
  "devDependencies": {
    "@types/lodash": "4.14.96",
    "@types/node": "9.3.0",
    "ava": "0.24.0",
    "prettier": "1.10.2",
    "tslint": "5.9.1",
    "typedoc": "0.9.0",
    "typescript": "2.4.2"
  }
}
