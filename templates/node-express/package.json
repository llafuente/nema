{
  "name": "crud-o-matic-server",
  "version": "0.0.1",
  "description": "",
  "main": "./src/app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run build && ava --verbose ./dist/test/all.test.js --fail-fast",
    "testcv": "npm run build && ava --verbose ./dist/test/all.test.js",
