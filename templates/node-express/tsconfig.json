{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "./dist/",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "express",
      "supertest",
      "sinon"
    ],
    "baseUrl": ".",
    "inlineSourceMap": true
  },
  "files": [
    "./src/index.ts"
  ],
  "include": [
    "./test/*.test.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
