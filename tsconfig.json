  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "./dist/",
    "typeRoots": [
      "./node_modules/@types"
