  },
  "files": [
    "./src/nema.ts",
    "./test/api.test.ts",
    "./test/angular5client-resolve.test.ts",
    "./test/angular5client-parameters.test.ts",
    "./test/pet-store.test.ts",
    "./test/responses-references.test.ts",
    "./test/no-cycles.test.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
